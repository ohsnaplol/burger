<h1>Eat-Da-Burger!</h1>

<h2>Non devoured burgers</h2>

<ul>
  {{#each burger_name}}
    {{#if !devoured}}
      {{burger_name}}
    {{/if}}
  {{/each}}
</ul>

<h2>Devoured burgers</h2>

<ul>
  {{#each burger_name}}
    {{#if devoured}}
      {{burger_name}}
    {{/if}}
  {{/each}}
</ul>

<h2>Add Burger</h2>
<form class="create-form">

  <div class="form-group">
    <label for="ca">Burger name:</label>
    <input type="text" id="ca" name="name">
  </div>
  <button type="submit">Add Burger</button>
</form>
